{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 2021,
        "sourceType": "module"
    },
    "rules": {
        "semi": [
            "error",
            "never"
        ],
        "max-len": [
            "error",
            180,
            2,
            {
                "code": 180,
                "ignoreTrailingComments": true,
                "ignoreComments": true,
                "ignoreStrings": true,
                "ignoreUrls": true
            }
        ],
        "object-curly-newline": [
            "error",
            {
                "multiline": true,
                "consistent": true
            }
        ],
        "import/extensions": [
            "error",
            "always"
        ],
        "linebreak-style": 0
    }
}